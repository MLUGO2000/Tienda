<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardOrden"
        android:layout_width="327dp"
        android:layout_height="157dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="13dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cantidadOrden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="28dp"
                android:text="TextView"
                android:textSize="@dimen/sizeText"
                app:layout_constraintStart_toEndOf="@+id/imageOrden"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/totalOrden"
                android:layout_width="77dp"
                android:layout_height="29dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="@dimen/sizeText"
                app:layout_constraintStart_toEndOf="@+id/imageOrden"
                app:layout_constraintTop_toBottomOf="@+id/cantidadOrden" />

            <ImageView
                android:id="@+id/imageOrden"
                android:layout_width="110dp"
                android:layout_height="87dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/nombreOrden"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textSize="@dimen/sizeText"
                app:layout_constraintBottom_toTopOf="@+id/imageOrden"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>